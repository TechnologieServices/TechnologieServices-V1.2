    "gauche",
		{
      "setup":"",
      "inc":"#include \"Servo.h\"\n#include \"TSRobunoOnline.h\"\n",
      "def":"TSRobuno robuno;",
      "work":"robuno.read({0});\n",
      "loop":""
    }],
    ["R", "Lire la valeur de la LDR %m.robunoSide",
    "robunoLDR",
    "gauche",
		{
      "setup":"",
      "inc":"#include \"Servo.h\"\n#include \"TSRobunoOnline.h\"\n",
      "def":"TSRobuno robuno;",
      "work":"robuno.ldr_read({0});\n",
      "loop":""
