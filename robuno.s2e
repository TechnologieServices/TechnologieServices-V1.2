      "def":"TSRobuno robuno;",
      "work":"robuno.run({0},{1});\n",
      "loop":""
    }],
    ["w", "Stopper le robot",
    "robunoStop",
    0, 
		{
      "setup":"",
      "inc":"#include \"Servo.h\"\n#include \"TSRobunoOnline.h\"\n",
      "def":"TSRobuno robuno;",
      "work":"robuno.stop();\n",
      "loop":""
    }],
    ["w", "Mettre %m.robunoOutputPort au niveau %m.digital",
    "robunoWrite",
